---
interface Props {
  type: 'microservices' | 'monolith' | 'serverless' | 'mobile-backend';
}

const { type } = Astro.props;
---

<div class="w-full bg-slate-900/30 rounded-xl border border-slate-800 p-8 flex items-center justify-center min-h-[300px] relative overflow-hidden group">
    <!-- Background Grid -->
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:24px_24px]"></div>

    <!-- Diagram Implementation -->
    {type === 'mobile-backend' && (
         <div class="relative z-10 flex flex-col items-center gap-12 w-full max-w-lg">
            <!-- Mobile Client -->
            <div class="flex items-center justify-center w-16 h-24 rounded-2xl border-2 border-slate-600 bg-slate-800 text-slate-300 shadow-xl">App</div>
            
            <!-- Connection Lines -->
            <div class="absolute top-[80px] w-0.5 h-16 bg-gradient-to-b from-slate-600 to-indigo-500"></div>
            
            <!-- Load Balancer / API Gateway -->
            <div class="w-full grid grid-cols-2 gap-8">
                <div class="flex flex-col items-center gap-4">
                    <div class="px-6 py-3 rounded-lg border border-indigo-500 bg-indigo-500/10 text-indigo-300 font-mono text-sm">REST API</div>
                    <div class="w-0.5 h-8 bg-slate-700"></div>
                    <div class="p-4 rounded-full border border-emerald-500 bg-emerald-500/10 text-xs text-emerald-300">Database</div>
                </div>
                <div class="flex flex-col items-center gap-4">
                    <div class="px-6 py-3 rounded-lg border border-sky-500 bg-sky-500/10 text-sky-300 font-mono text-sm">Socket.io</div>
                </div>
            </div>
         </div>
    )}

    {type === 'monolith' && (
        <div class="relative z-10 flex items-center justify-center gap-8 w-full">
            <div class="flex flex-col items-center gap-2">
                <div class="w-12 h-12 rounded bg-slate-700 flex items-center justify-center border border-slate-600">UI</div>
                <div class="w-1 h-20 bg-slate-700"></div>
            </div>
            
            <div class="p-8 rounded-xl border-2 border-indigo-500/50 bg-slate-900 shadow-2xl relative">
                <div class="absolute -top-3 left-4 bg-slate-900 px-2 text-indigo-400 text-xs font-mono border border-indigo-500/50 rounded">Monolith</div>
                <div class="grid grid-cols-2 gap-4">
                    <div class="w-16 h-16 rounded bg-indigo-500/20 border border-indigo-500/30 flex items-center justify-center text-xs text-indigo-300">Auth</div>
                    <div class="w-16 h-16 rounded bg-indigo-500/20 border border-indigo-500/30 flex items-center justify-center text-xs text-indigo-300">Core</div>
                    <div class="w-16 h-16 rounded bg-indigo-500/20 border border-indigo-500/30 flex items-center justify-center text-xs text-indigo-300">Data</div>
                    <div class="w-16 h-16 rounded bg-indigo-500/20 border border-indigo-500/30 flex items-center justify-center text-xs text-indigo-300">Jobs</div>
                </div>
            </div>

            <div class="flex flex-col items-center gap-2">
                <div class="w-1 h-20 bg-slate-700"></div>
                 <div class="px-4 py-2 rounded-lg border border-emerald-500 bg-emerald-500/10 text-emerald-300 font-mono text-sm">DB</div>
            </div>
        </div>
    )}

    {(type === 'serverless' || type === 'microservices') && (
        <div class="relative z-10 grid grid-cols-3 gap-8 items-center w-full max-w-2xl px-8">
             <div class="flex flex-col gap-4">
                <div class="p-3 bg-slate-800 border border-slate-700 rounded text-center text-xs text-slate-400">Client A</div>
                <div class="p-3 bg-slate-800 border border-slate-700 rounded text-center text-xs text-slate-400">Client B</div>
             </div>

             <div class="flex flex-col items-center justify-center gap-2">
                <div class="w-12 h-12 rounded-full border-2 border-indigo-500 bg-indigo-500/20 flex items-center justify-center text-[10px] text-indigo-300 text-center leading-tight">API<br>GW</div>
             </div>

             <div class="flex flex-col gap-6">
                <div class="flex items-center gap-2">
                    <div class="w-8 h-0.5 bg-slate-600"></div>
                    <div class="px-4 py-2 rounded border border-sky-500 bg-sky-500/10 text-sky-400 text-xs">Auth Func</div>
                </div>
                <div class="flex items-center gap-2">
                    <div class="w-8 h-0.5 bg-slate-600"></div>
                    <div class="px-4 py-2 rounded border border-purple-500 bg-purple-500/10 text-purple-400 text-xs">Game State</div>
                </div>
                <div class="flex items-center gap-2">
                     <div class="w-8 h-0.5 bg-slate-600"></div>
                    <div class="px-4 py-2 rounded border border-emerald-500 bg-emerald-500/10 text-emerald-400 text-xs">Payment</div>
                </div>
             </div>
        </div>
    )}
</div>
