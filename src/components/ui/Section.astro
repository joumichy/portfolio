---
interface Props {
  id?: string;
  title?: string;
  class?: string;
}

const { id, title, class: className } = Astro.props;
---

<section id={id} class:list={["py-20", className]}>
  <div class="container mx-auto px-4">
    {title && (
      <div class="mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 flex items-center gap-3">
          <span class="text-indigo-500">#</span>
          {title}
        </h2>
        <div class="h-1 w-20 bg-indigo-500 rounded-full"></div>
      </div>
    )}
    <slot />
  </div>
</section>
